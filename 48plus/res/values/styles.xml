<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 整体风格==================================================================================================== -->
    <!-- View的主风格 -->
    <style name="list">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:background">@android:color/background_light</item>
	    <item name="android:listSelector">@android:drawable/list_selector_background</item>
    </style>
    
    <!-- 标题栏的风格 -->
    <style name="title" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowTitleSize">40dp</item>
    </style>
    
    <style name="CustomWindowTitleBackground">
       <item name="android:background">@drawable/transparent</item>
    </style>

    <!-- tab_bottom's style -->
    <style name="main_tab_bottom">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <!-- 各部风格==================================================================================================== -->
    <!-- Google+图片风格 -->
    <style name="PlusImage">
        <item name="android:src">@drawable/dummy</item>
    </style>
    
    <!-- 头像的风格 -->
    <style name="PlusImage.People">
        <item name="android:layout_width">80dip</item>
        <item name="android:layout_height">80dip</item>
    </style>
    
    <!-- 上传图片的风格 -->
    <style name="PlusImage.Attachment">
        <item name="android:layout_width">80dip</item>
        <item name="android:layout_height">80dip</item>
    </style>
    
    <!-- 文字整体风格  -->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 不表示文字的风格  -->
    <style name="TextView.invisibility">
        <item name="android:visibility">gone</item>
    </style>

    <!-- 抬头的风格 -->
    <style name="TextView.Title">
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <!-- 来源的风格 -->
    <style name="TextView.Provider">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#000033</item>
    </style>
    <!-- 投稿的风格 -->
    <style name="TextView.Activity">
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    
    <!-- 评论的风格 -->
    <style name="TextView.Commenter">
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#0000ff</item>
    </style>
    <style name="TextView.Comment">
        <item name="android:textSize">13dip</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="comments">
        <item name="android:background">#f2f2f2</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
</resources>